<div class="container">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <h1>Eat-Da-Burger!</h1>
    </div>
    <div class="col-sm">
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	      {{id}}. {{name}}
	    <button class="change-devoured" data-id="{{id}}" data-newEaten="{{eaten}}">Devour It!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>
    </div>
    <div class="col-sm">
      <h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
      	{{id}}. {{name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to eat
  </div>

  <button type="submit">Sumbit</button>
  <p>Enter a burger you want to eat Click the "Submit" button.</p>
</form>
    </div>
    <div class="col-sm">
    </div>
  </div>
</div>


